<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearVerticalDefault">

    <androidx.core.widget.NestedScrollView
        style="@style/NestedScrollDefault">
        <LinearLayout
            style="@style/LinearVerticalWrap">
            <androidx.cardview.widget.CardView
                style="@style/CardWrapHeight"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/ConstraintWrapHeight"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/tv_title_breaking"
                        style="@style/TextSuperExtraBig"
                        android:layout_width="0dp"
                        android:text="@string/app_name"
                        android:textColor="@color/blackText"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <ImageView
                        android:id="@+id/iv_breaking"
                        style="@style/ImageViewHeightRatio"
                        android:layout_marginTop="16dp"
                        app:layout_constraintDimensionRatio="2:1"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_breaking"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:id="@+id/tv_content_breaking"
                        style="@style/TextNormal"
                        android:layout_width="0dp"
                        android:text="@string/app_name"
                        android:layout_marginTop="16dp"
                        android:maxLength="100"
                        android:ellipsize="end"
                        app:layout_constraintTop_toBottomOf="@id/iv_breaking"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <TextView
                        android:id="@+id/btn_read_more_breaking"
                        style="@style/TextNormal"
                        android:text="@string/btn_read_more"
                        android:textStyle="bold"
                        android:textColor="@color/blackText"
                        android:foreground="?selectableItemBackground"
                        android:padding="10dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_content_breaking"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <View
                        android:id="@+id/separator_breaking"
                        style="@style/ViewLine"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/btn_read_more_breaking"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_breaking"
                        style="@style/RecyclerWrapHeight"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/separator_breaking"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <ProgressBar
                        android:id="@+id/pb_breaking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="@id/tv_title_breaking"
                        app:layout_constraintBottom_toBottomOf="@id/recycler_breaking"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                style="@style/TextBig"
                android:text="@string/label_business"
                android:textStyle="bold"
                android:textColor="@color/blackText"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout
                style="@style/RelativeWrapAll">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_business"
                    style="@style/RecyclerWrapHeight"/>
                <ProgressBar
                    android:id="@+id/pb_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>
            <TextView
                style="@style/TextBig"
                android:text="@string/label_tech"
                android:textStyle="bold"
                android:textColor="@color/blackText"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout
                style="@style/RelativeWrapAll">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_tech"
                    style="@style/RecyclerWrapHeight"/>
                <ProgressBar
                    android:id="@+id/pb_tech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>
            <TextView
                style="@style/TextBig"
                android:text="@string/label_sport"
                android:textStyle="bold"
                android:textColor="@color/blackText"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout
                style="@style/RelativeWrapAll">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_sport"
                    style="@style/RecyclerWrapHeight"/>
                <ProgressBar
                    android:id="@+id/pb_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
